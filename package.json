{
  "name": "neuroforge",
  "displayName": "NeuroForge",
  "description": "AI-powered coding assistant for VS Code",
  "version": "0.0.1",
  "publisher": "neuroforge",
  "private": true,
  "license": "MIT",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "neuroforge",
          "title": "NeuroForge",
          "icon": "$(smiley)"
        }
      ]
    },
    "views": {
      "neuroforge": [
        {
          "type": "webview",
          "id": "neuroforge.chatView",
          "name": "Chat",
          "icon": "$(smiley)",
          "when": "!neuroforge.showingSettings"
        },
        {
          "type": "webview",
          "id": "neuroforge.settingsView",
          "name": "Settings",
          "icon": "$(gear)",
          "when": "neuroforge.showingSettings"
        },
        {
          "id": "dependencyExplorer",
          "name": "Dependencies",
          "icon": "$(smiley)"
        }
      ]
    },
    "commands": [
      {
        "command": "neuroforge.explainCode",
        "title": "NeuroForge: Explain Code",
        "category": "NeuroForge",
        "icon": "$(smiley)"
      },
      {
        "command": "neuroforge.generateDocs",
        "title": "NeuroForge: Generate Documentation",
        "category": "NeuroForge",
        "icon": "$(smiley)"
      },
      {
        "command": "neuroforge.suggestRefactor",
        "title": "NeuroForge: Suggest Refactoring",
        "category": "NeuroForge",
        "icon": "$(smiley)"
      },
      {
        "command": "neuroforge.generateTests",
        "title": "NeuroForge: Generate Tests",
        "category": "NeuroForge",
        "icon": "$(smiley)"
      },
      {
        "command": "neuroforge.convertCode",
        "title": "NeuroForge: Convert Code",
        "category": "NeuroForge",
        "icon": "$(smiley)"
      },
      {
        "command": "neuroforge.analyzeDependencies",
        "title": "NeuroForge: Analyze Dependencies",
        "category": "NeuroForge",
        "icon": "$(smiley)"
      },
      {
        "command": "neuroforge.openSettings",
        "title": "NeuroForge: Settings",
        "category": "NeuroForge",
        "icon": "$(gear)"
      },
      {
        "command": "neuroforge.backToChat",
        "title": "NeuroForge: Back to Chat",
        "category": "NeuroForge",
        "icon": "$(smiley)"
      },
      {
        "command": "neuroforge.showMenu",
        "title": "NeuroForge: Show Actions Menu",
        "category": "NeuroForge",
        "icon": "$(smiley)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "neuroforge.openSettings",
          "when": "view == neuroforge.chatView",
          "group": "navigation"
        },
        {
          "command": "neuroforge.backToChat",
          "when": "view == neuroforge.settingsView",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "submenu": "neuroforge.menu",
          "group": "navigation"
        }
      ]
    },
    "submenus": [
      {
        "id": "neuroforge.menu",
        "label": "NeuroForge"
      }
    ],
    "configuration": {
      "title": "NeuroForge",
      "properties": {
        "neuroforge.provider": {
          "type": "string",
          "default": "anthropic",
          "enum": [
            "anthropic",
            "openai"
          ],
          "description": "AI provider to use"
        },
        "neuroforge.apiKey": {
          "type": "string",
          "description": "API key for the selected provider"
        },
        "neuroforge.maxTokens": {
          "type": "number",
          "default": 8192,
          "description": "Maximum number of tokens to use in AI requests"
        },
        "neuroforge.temperature": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 1,
          "description": "Temperature setting for AI responses"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run copy-media",
    "watch": "tsc -watch -p ./ && npm run copy-media",
    "copy-media": "npx copyfiles -u 1 media/**/* out/media",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "copyfiles": "^2.4.1",
    "eslint": "^9.16.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@vscode/vsce": "^2.24.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/piwi3910/NeuroForge.git"
  },
  "keywords": [
    "ai",
    "code-analysis",
    "documentation",
    "productivity",
    "code-generation",
    "testing",
    "refactoring",
    "code-conversion"
  ],
  "author": "Pascal Watteel",
  "bugs": {
    "url": "https://github.com/piwi3910/NeuroForge/issues"
  },
  "homepage": "https://github.com/piwi3910/NeuroForge#readme"
}
