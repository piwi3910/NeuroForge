{
  "name": "neuroforge",
  "displayName": "NeuroForge",
  "description": "AI-powered coding assistant for VS Code",
  "version": "0.0.1",
  "publisher": "neuroforge",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "neuroforge-explorer",
          "title": "NeuroForge",
          "icon": "$(symbol-misc)"
        }
      ]
    },
    "views": {
      "neuroforge-explorer": [
        {
          "type": "webview",
          "id": "neuroforge.chatView",
          "name": "Chat",
          "icon": "$(comment-discussion)",
          "contextualTitle": "AI Assistant"
        },
        {
          "id": "neuroForgeDependencies",
          "name": "Dependencies",
          "icon": "$(references)",
          "contextualTitle": "Project Dependencies"
        }
      ]
    },
    "commands": [
      {
        "command": "neuroforge.explainCode",
        "title": "NeuroForge: Explain Code",
        "category": "NeuroForge",
        "icon": "$(lightbulb)"
      },
      {
        "command": "neuroforge.generateDocs",
        "title": "NeuroForge: Generate Documentation",
        "category": "NeuroForge",
        "icon": "$(note)"
      },
      {
        "command": "neuroforge.suggestRefactor",
        "title": "NeuroForge: Suggest Refactoring",
        "category": "NeuroForge",
        "icon": "$(wand)"
      },
      {
        "command": "neuroforge.generateTests",
        "title": "NeuroForge: Generate Tests",
        "category": "NeuroForge",
        "icon": "$(beaker)"
      },
      {
        "command": "neuroforge.convertCode",
        "title": "NeuroForge: Convert Code",
        "category": "NeuroForge",
        "icon": "$(sync)"
      },
      {
        "command": "neuroforge.analyzeDependencies",
        "title": "NeuroForge: Analyze Dependencies",
        "category": "NeuroForge",
        "icon": "$(references)"
      },
      {
        "command": "neuroforge.openDependencyFile",
        "title": "Open File",
        "icon": "$(go-to-file)"
      },
      {
        "command": "neuroforge.showDependencyDetails",
        "title": "Show Details",
        "icon": "$(info)"
      },
      {
        "command": "neuroforge.openSettings",
        "title": "NeuroForge: Open Settings",
        "category": "NeuroForge",
        "icon": "$(gear)"
      },
      {
        "command": "neuroforge.showMenu",
        "title": "NeuroForge: Show Actions Menu",
        "category": "NeuroForge",
        "icon": "$(symbol-misc)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "neuroforge.analyzeDependencies",
          "when": "view == neuroForgeDependencies",
          "group": "navigation"
        },
        {
          "command": "neuroforge.openSettings",
          "when": "view == neuroforge.chatView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "neuroforge.openDependencyFile",
          "when": "view == neuroForgeDependencies && viewItem == file",
          "group": "inline"
        },
        {
          "command": "neuroforge.showDependencyDetails",
          "when": "view == neuroForgeDependencies && viewItem == file",
          "group": "inline"
        }
      ],
      "editor/context": [
        {
          "submenu": "neuroforge.menu",
          "group": "navigation"
        }
      ],
      "neuroforge.menu": [
        {
          "command": "neuroforge.explainCode",
          "group": "1_analysis"
        },
        {
          "command": "neuroforge.generateDocs",
          "group": "1_analysis"
        },
        {
          "command": "neuroforge.suggestRefactor",
          "group": "2_modification"
        },
        {
          "command": "neuroforge.generateTests",
          "group": "2_modification"
        },
        {
          "command": "neuroforge.convertCode",
          "group": "2_modification"
        },
        {
          "command": "neuroforge.analyzeDependencies",
          "group": "3_analysis"
        }
      ]
    },
    "submenus": [
      {
        "id": "neuroforge.menu",
        "label": "NeuroForge"
      }
    ],
    "keybindings": [
      {
        "command": "neuroforge.explainCode",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "editorTextFocus"
      },
      {
        "command": "neuroforge.generateDocs",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "editorTextFocus"
      },
      {
        "command": "neuroforge.suggestRefactor",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorTextFocus"
      },
      {
        "command": "neuroforge.generateTests",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus"
      },
      {
        "command": "neuroforge.convertCode",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorTextFocus"
      },
      {
        "command": "neuroforge.analyzeDependencies",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a",
        "when": "editorTextFocus"
      },
      {
        "command": "neuroforge.showMenu",
        "key": "ctrl+shift+space",
        "mac": "cmd+shift+space",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "NeuroForge",
      "properties": {
        "neuroforge.aiModel": {
          "type": "string",
          "default": "default",
          "description": "AI model to use for code analysis and generation",
          "enum": ["default", "fast", "accurate"],
          "enumDescriptions": [
            "Balanced performance and accuracy",
            "Faster response times with reduced accuracy",
            "Higher accuracy with longer processing times"
          ]
        },
        "neuroforge.maxTokens": {
          "type": "number",
          "default": 1000,
          "description": "Maximum number of tokens to use in AI requests"
        },
        "neuroforge.language": {
          "type": "string",
          "default": "auto",
          "description": "Primary programming language for code analysis"
        },
        "neuroforge.autoSuggest": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable automatic code suggestions"
        },
        "neuroforge.documentationStyle": {
          "type": "string",
          "default": "standard",
          "description": "Documentation style to use",
          "enum": ["standard", "detailed", "minimal"],
          "enumDescriptions": [
            "Standard documentation with essential information",
            "Detailed documentation with examples and edge cases",
            "Minimal documentation with basic information only"
          ]
        },
        "neuroforge.testFramework": {
          "type": "object",
          "description": "Test framework configurations",
          "properties": {
            "javascript": {
              "type": "string",
              "default": "jest",
              "enum": ["jest", "mocha"]
            },
            "python": {
              "type": "string",
              "default": "pytest",
              "enum": ["pytest", "unittest"]
            },
            "java": {
              "type": "string",
              "default": "junit",
              "enum": ["junit", "testng"]
            }
          }
        },
        "neuroforge.codeConversion": {
          "type": "object",
          "description": "Code conversion preferences",
          "properties": {
            "preserveComments": {
              "type": "boolean",
              "default": true,
              "description": "Preserve comments during code conversion"
            },
            "stylePreference": {
              "type": "string",
              "default": "modern",
              "enum": ["modern", "classic"],
              "description": "Code style preference for converted code"
            }
          }
        },
        "neuroforge.ai": {
          "type": "object",
          "description": "AI service configuration",
          "properties": {
            "provider": {
              "type": "string",
              "default": "openai",
              "enum": ["openai", "anthropic", "local"],
              "description": "AI provider to use"
            },
            "apiKey": {
              "type": "string",
              "description": "API key for the selected AI provider"
            },
            "model": {
              "type": "string",
              "description": "Specific model to use from the provider"
            },
            "temperature": {
              "type": "number",
              "default": 0.7,
              "minimum": 0,
              "maximum": 1,
              "description": "Temperature for AI responses"
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "mocha": "^10.8.0",
    "typescript": "^5.7.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/piwi3910/neuroforge.git"
  },
  "keywords": [
    "ai",
    "code-analysis",
    "documentation",
    "productivity",
    "code-generation",
    "testing",
    "refactoring",
    "code-conversion"
  ],
  "author": "Pascal Watteel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/piwi3910/neuroforge/issues"
  },
  "homepage": "https://github.com/piwi3910/neuroforge#readme"
}
